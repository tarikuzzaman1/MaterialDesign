        <item name="android:textColorSecondary">@android:color/white</item> <!-- Color of Overflow Menu ( 3 dots icon ) and color of Navigation Drawer Icon -->
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#9E9E9E</item> <!-- Text color of Overflow Menu -->
        <item name="android:background">#FFFCFFF6</item> <!-- Background of Overflow Menu -->
    </style>





    <style name="ToolbarThemee" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/holo_blue_light</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
